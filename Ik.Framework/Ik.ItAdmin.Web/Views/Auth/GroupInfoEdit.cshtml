@model Ik.ItAdmin.Web.Models.AuthGroupInfoModel
@{
    ViewBag.Title = "用户组修改";
}
@section headerScripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
<table width="100%" height="100%" border="0" cellspacing="0" cellpadding="0" class="infoeditpage">
    @using (Ajax.BeginForm("SaveAuthGroupInfo", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSuccessSaveAuthGroupInfoForm" }, new { @id = "SaveAuthGroupInfoForm" }))
    {
        @Html.HiddenFor(m => m.GroupId) 
        <tr height="24px">
            <td class="title">用户组修改</td>
        </tr>
        <tr>
            <td>
                <div class="info">
                    <table border="0" cellspacing="0" cellpadding="0">
                        <tr height="10px">
                            <td colspan="3">&nbsp;</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">标识：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.Code, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">名称：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.Name, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>        
                        <tr height="10px">
                            <td colspan="3">&nbsp;</td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        <tr height="35px">
            <td class="handle">
                <a href="#" class="wiscobutton" onclick="$('#SaveAuthGroupInfoForm').submit();"><span class="left"></span><span class="center">保存</span><span class="right"></span></a>
                <a href="#" class="wiscobutton" onclick="hideWiscoDialog();"><span class="left"></span><span class="center">取消</span><span class="right"></span></a>
            </td>
        </tr>
    }
</table>
<script>

    function onSuccessSaveAuthGroupInfoForm(result) {
        if (result.IsSuccess) {
            alert("用户组保存成功");
            var dialog = getWiscoDialog();
            dialog.argu = "success";
            hideWiscoDialog();
        }
        else if (result.Code == -101)
        {
            alert(result.Desc);
        }
        else {
            alert("用户组保存失败");
        }
    }
</script>



