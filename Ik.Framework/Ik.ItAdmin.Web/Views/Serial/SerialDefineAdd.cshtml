@model Ik.ItAdmin.Web.Models.SerialDefineInfoModel
@{
    ViewBag.Title = "编号定义添加";
}
@section headerScripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
<table width="100%" height="100%" border="0" cellspacing="0" cellpadding="0" class="infoeditpage">
    @using (Ajax.BeginForm("SaveSerialDefineInfo", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSuccessSaveSerialDefineInfoForm" }, new { @id = "SaveSerialDefineInfoForm" }))
    {
        <tr height="24px">
            <td class="title">编号定义添加</td>
        </tr>
        <tr>
            <td>
                <div class="info">
                    <table border="0" cellspacing="0" cellpadding="0">
                        <tr height="10px">
                            <td colspan="3">&nbsp;</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">名称：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.Name, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">标识：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.Key, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">自定义前缀：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.PrefixValue, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>
                        <tr height="30px">
                            <td width="100px" class="label">编号位数：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(m => m.FormatLength, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr> 
                        <tr height="30px">
                            <td width="100px" class="label">日期格式：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(d => d.DateFormat, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr> 
                        <tr height="30px">
                            <td width="100px" class="label">申请容量：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(m => m.ApplyCapacity, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>  
                        <tr height="30px">
                            <td width="100px" class="label">检查阀值：</td>
                            <td width="240px" class="value">
                                @Html.TextBoxFor(m => m.CheckThreshold, new { @class = "wiscoinput" })
                            </td>
                            <td width="5px" class="sign">*</td>
                        </tr>      
                        <tr height="10px">
                            <td colspan="3">&nbsp;</td>
                        </tr>
                        <tr class="area">
                            <td width="100px" class="label">描述：</td>
                            <td width="240px" class="value">
                                @Html.TextAreaFor(d => d.Desc, new { @class = "wiscotextarea", @style = "width: 235px;" })
                            </td>
                            <td width="5px" class="sign">&nbsp;</td>
                        </tr>
                        <tr height="10px">
                            <td colspan="3">&nbsp;</td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        <tr height="35px">
            <td class="handle">
                <a href="#" class="wiscobutton" onclick="$('#SaveSerialDefineInfoForm').submit();"><span class="left"></span><span class="center">保存</span><span class="right"></span></a>
                <a href="#" class="wiscobutton" onclick="hideWiscoDialog();"><span class="left"></span><span class="center">取消</span><span class="right"></span></a>
            </td>
        </tr>
    }
</table>
<script>

    function onSuccessSaveSerialDefineInfoForm(result) {
        if (result.IsSuccess) {
            alert("编号定义保存成功");
            var dialog = getWiscoDialog();
            dialog.argu = "success";
            hideWiscoDialog();
        }
        else if (result.Code == -101)
        {
            alert(result.Desc);
        }
        else {
            alert("编号定义保存失败");
        }
    }
</script>



